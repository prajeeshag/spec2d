module load netcdf/4.2.1
module load fftw/3.3.8

# Fortran compiler
export FC=mpiifort
export F77=mpiifort

# C compiler
export CC=mpiicc
export MPICC=mpiicc

# if mpi library version is 3 or above
export MPI3=True

export FFTW_DIR=/gpfs1/home/Libs/INTEL/FFTW-3.3.8

export NETCDF=/gpfs1/home/Libs/INTEL/NETCDF4/netcdf-4.2.1
  
# JOBSCDLR - Name of job scheduler (Currently only lsf and pbs supported).
export JOBSCDLR=lsf
